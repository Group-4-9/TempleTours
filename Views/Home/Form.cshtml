@{
    ViewBag.Title = "Form Page";
}

<div>
    <h1>Sign up here!</h1>
    <p>Please enter your groups name, size, and contact information and we will get back to you shortly!</p><br />

    <form asp-action="Form" method="post">

        @*submit a new form; dummy data now, loop through IRepository later*@
        <div class="table myInput">
            <label for="Time">Time slot</label>
            <input id="Time" type="text" class="myInput" value="8:00 PM (from Sign Up page)" /><br />

            <label for="Name">Group Name</label>
            <input id="Name" type="text" class="myInput" /><br />

            <label for="Size">Group Size</label>
            <input id="Size" type="text" class="myInput" /><br />

            <label for="Email">Email</label>
            <input id="Email" type="number" class="myInput" /><br />

            <label for="Phone">Phone</label>
            <input id="Phone" type="text" class="myInput" /><br /><br />

            <button asp-action="Index" type="submit" class="btn btn-primary">Submit</button>
        </div><br /><br /><br /><br /><br /><br /><br /><br /><br />
    </form>
</div>
